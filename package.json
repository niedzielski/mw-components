{
  "name": "@wikimedia/mw-components",
  "author": "Wikimedia",
  "description": "Vue.js user interface components for Wikipedia, MediaWiki, and beyond.",
  "version": "0.0.0",
  "keywords": [
    "Vue.js",
    "components",
    "Wikipedia",
    "MediaWiki",
    "Wikimedia",
    "TypeScript"
  ],
  "homepage": "https://github.com/niedzielski/mw-components",
  "repository": "github:niedzielski/mw-components",
  "bugs": "https://phabricator.wikimedia.org/tag/vue.js",
  "license": "MIT",
  "main": "dist/mwc.js",
  "scripts": {
    "build": "tsc",
    "test": "npm -s run build && npm -s run test:size && npm -s run docs",
    "test:size": "bundlesize",
    "docs": "npm -s run docs:source-map:min && npm -s run docs:source-map:minGzip",
    "docs:source-map:min": "source-map-explorer --html docs/source-maps/min.html dist/index.js",
    "docs:source-map:minGzip": "source-map-explorer --gzip --html docs/source-maps/minGzip.html dist/index.js",
    "preversion": "[ -z \"$(git status -z)\" ]",
    "postversion": "git push --follow-tags origin HEAD && npm publish",
    "prepublishOnly": "npm -s t"
  },
  "devDependencies": {
    "bundlesize": "0.18.0",
    "pre-commit": "1.2.2",
    "source-map-explorer": "2.4.2",
    "typescript": "3.9.2"
  }
}
