{
  "name": "@wikimedia/mw-components",
  "author": "Wikimedia",
  "description": "Vue.js user interface components for Wikipedia, MediaWiki, and beyond.",
  "version": "0.0.0",
  "keywords": [
    "Vue.js",
    "components",
    "Wikipedia",
    "MediaWiki",
    "Wikimedia",
    "TypeScript"
  ],
  "homepage": "https://github.com/niedzielski/mw-components",
  "repository": "github:niedzielski/mw-components",
  "bugs": "https://phabricator.wikimedia.org/tag/vue.js",
  "license": "MIT",
  "main": "dist/mwc.js",
  "types": "dist/mwc.d.ts",
  "scripts": {
    "build": "webpack -p",
    "test": "npm -s run build && npm -s run test:size && npm -s run test:lint && npm -s run docs",
    "test:size": "bundlesize",
    "test:lint": "npm -s run linter -- .",
    "format": "npm -s run linter -- --fix .",
    "linter": "eslint --cache --max-warnings 0 --report-unused-disable-directives --ext .js,.json,.ts,.vue",
    "docs": "npm -s run docs:source-map:mwcMin && npm -s run docs:source-map:mwcMinGzip && npm -s run docs:source-map:primitivesMin && npm -s run docs:source-map:primitivesMinGzip",
    "docs:source-map:mwcMin": "source-map-explorer            --html docs/source-maps/mwcMin.html     dist/mwc.{js,css}",
    "docs:source-map:mwcMinGzip": "source-map-explorer --gzip --html docs/source-maps/mwcMinGzip.html dist/mwc.{js,css}",
    "docs:source-map:primitivesMin": "source-map-explorer            --html docs/source-maps/primitivesMin.html     dist/mwc-primitives.{js,css}",
    "docs:source-map:primitivesMinGzip": "source-map-explorer --gzip --html docs/source-maps/primitivesMinGzip.html dist/mwc-primitives.{js,css}",
    "preversion": "[ -z \"$(git status -z)\" ]",
    "postversion": "git push --follow-tags origin HEAD && npm publish",
    "prepublishOnly": "npm -s t"
  },
  "peerDependencies": {
    "vue": "^2.6.11"
  },
  "devDependencies": {
    "@types/mini-css-extract-plugin": "0.9.1",
    "@typescript-eslint/eslint-plugin": "2.33.0",
    "@typescript-eslint/parser": "2.33.0",
    "bundlesize": "0.18.0",
    "clean-webpack-plugin": "3.0.0",
    "css-loader": "3.5.3",
    "eslint": "6.8.0",
    "eslint-config-wikimedia": "0.15.3",
    "less-loader": "6.1.0",
    "mini-css-extract-plugin": "0.9.0",
    "pre-commit": "1.2.2",
    "source-map-explorer": "2.4.2",
    "ts-loader": "7.0.4",
    "typescript": "3.9.2",
    "vue": "2.6.11",
    "vue-loader": "15.9.2",
    "vue-template-compiler": "2.6.11",
    "webpack": "4.43.0",
    "webpack-cli": "3.3.11"
  }
}
